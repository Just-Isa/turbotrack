<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="110dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/textlines">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/meal_ingredient_name"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="@string/add_ingredient_name_hint"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="#363636" />


        <EditText
            android:id="@+id/meal_ingredient_calories"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="start"
            android:hint="@string/cal"
            android:inputType="numberDecimal"
            android:textColor="@color/white"

            android:textColorHint="#363636" />

        <EditText
            android:id="@+id/meal_ingredient_calories_grams"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:ems="10"
            android:gravity="start"
            android:hint="@string/g_ml"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="#363636"

            />

        <ImageView
            android:id="@+id/meal_ingredient_remove"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_gravity="top|center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="4dp"
            android:src="@android:drawable/ic_input_delete" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">


        <EditText
            android:id="@+id/meal_ingredient_protein"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:gravity="start"
            android:hint="@string/protein"
            android:inputType="numberDecimal"
            android:textColor="@color/white"

            android:textColorHint="#363636" />

        <EditText
            android:id="@+id/meal_ingredient_fat"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:ems="10"
            android:gravity="start"
            android:hint="@string/fat"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="#363636"

            />

        <EditText
            android:id="@+id/meal_ingredient_salt"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:ems="10"
            android:gravity="start"
            android:hint="@string/salt"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="#363636"

            />

        <EditText
            android:id="@+id/meal_ingredient_sugar"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:ems="10"
            android:gravity="start"
            android:hint="@string/sugar"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="#363636"

            />

    </LinearLayout>

</LinearLayout>